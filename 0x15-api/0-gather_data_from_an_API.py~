#!/usr/bin/python3
import sys
import requests
import json
url = "https://jsonplaceholder.typicode.com/users/{}/todos"
employee_id = sys.argv[1]
response = requests.get(url.format(employee_id))
todos = json.loads(response.text)
num_completed_tasks = sum(todo['completed'] for todo in todos)
num_total_tasks = len(todos)
employee_name = todos[0]['username']
print("Employee {} is done with tasks({}/{}):".format(employee_name, num_completed_tasks, num_total_tasks))
for todo in todos:
    if todo['completed']:
        print("\t{}".format(todo['title']))
